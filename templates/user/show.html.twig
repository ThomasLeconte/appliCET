{% extends '@NormandieView/base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

	{{ bloc("Détail d'un user ", {expanded: true, expandable: false, "infobulle": info_bulle("") }) }}

    <div class="form" style="width:50%;--label-width:15em;">

                	                	        	
				<div class="form_row">
					<span class="form_label"><label>Username</label></span>
					<div class="form_row_widget">{{ user.username }}</div>
                </div>
                
        	                	        	
				<div class="form_row">
					<span class="form_label"><label>Password</label></span>
					<div class="form_row_widget">{{ user.password }}</div>
                </div>
                
        	                
		<div class="form_buttons">
           	{{ button("Retour à la liste", {icone:'annule', url: path('user_index')}) }}
        </div>
    </div>
    
    {{ fin_bloc() }}
    
{% endblock %}