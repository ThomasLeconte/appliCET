{% extends '@NormandieView/base.html.twig' %}

{% block title %}Action{% endblock %}

{% block body %}

	{{ bloc("Détail d'un action ", {expanded: true, expandable: false, "infobulle": info_bulle("") }) }}

    <div class="form" style="width:50%;--label-width:15em;">

                	                	        	
				<div class="form_row">
					<span class="form_label"><label>Annee</label></span>
					<div class="form_row_widget">{{ action.annee }}</div>
                </div>
                
        	                	        	
				<div class="form_row">
					<span class="form_label"><label>Date</label></span>
					<div class="form_row_widget">{{ action.date ? action.date|date('d/m/Y H:i:s') : '' }}</div>
                </div>
                
        	                	        	
				<div class="form_row">
					<span class="form_label"><label>Jours</label></span>
					<div class="form_row_widget">{{ action.jours }}</div>
                </div>
                
        	                	        	
				<div class="form_row">
					<span class="form_label"><label>Conges</label></span>
					<div class="form_row_widget">{{ action.conges }}</div>
                </div>
                
         {% if is_granted('ROLE_DSI') %}
		<div class="form_buttons">
           	{{ button("Retour à la liste", {icone:'annule', url: path('action_index')}) }}
        </div>
 		{% endif %}

    </div>
    
    {{ fin_bloc() }}
    
{% endblock %}